function refreshTag(outerHTML) {
  const tag = document.querySelector(".card-tag-index");
  tag.outerHTML = outerHTML;
}
function destroyTag() {
  const tag = document.querySelector(".bellepou").parentNode;
  tag.remove();
}
<% if request.referrer.include?('tags') %>
  destroyTag();
<% else %>
  refreshTag('<%= j render "items/tag", item: @item, tag:  %>');
<% end %>
