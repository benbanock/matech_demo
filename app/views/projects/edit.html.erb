<div class="container">
  <h2>Edit "<%= @project.name %>"</h2>

  <div class="block-container">
    <div class="block-edit">
      <%= simple_form_for(@project) do |f| %>
        <div>
          <p><%= f.input :name %></p>
          <p><%= f.input :status, collection: ["pending", "archived"] %></p>
          <p><%= f.button :submit, "Modify", class: "btn btn-primary" %></p>
        </div>
      <% end %>
      <%= simple_form_for [@project, @user_project] do |f| %>
        <div class="form-inlign">
          <p><%= f.input :user_id, policy_scope:"add a user", label: false, collection: User.not_in_the_project(@project).map { |user| [user.full_name, user.id] } %></p>
          <p><%= f.button :submit, "Add", class: "btn btn-primary" %></p>
        </div>
      <% end %>
      <div class="form-inlign button-inlign">
        <div class="button-stretch">
          <%= link_to "Delete", project_path(@project), method: :delete, class: "btn btn-danger btn-enlarge" %>
          <%= link_to "Back", projects_path, class: "btn btn-primary btn-enlarge" %>
        </div>
      </div>
    </div>

    <div class="block-users">
        <div class="row">
          <h3>Team:</h3>
        </div>
        <div class="row">
          <% @project.user_projects.each do |user_project| %>
            <div class="col-xs-12 col-sm-6">
              <div class="project-card">
                <div class="card-project-element">
                  <div class="card-project-photo">
                    <%= image_tag user_project.user.picture, id: "avatar-small" %>
                  </div>
                  <div class="card-project-name">
                    <h3><strong><%= user_project.user.first_name %> <%= user_project.user.last_name %></strong></h3>
                    <p><em><%= user_project.user.description %></em></p>
                  </div>
                  <div class="card-project-delete">
                    <%=link_to user_project_path(user_project), method: :delete do %>
                      <%= image_tag "trash-simple.svg"%>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
    </div>
  </div>

</div>
