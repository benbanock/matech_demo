<div class="container">
  <div class="project-nav">
    <div class="row">
      <div class="project-groups">
        <p><strong>All</strong></p>
        <p> | Favorites</p>
        <p> | Recent</p>
      </div>
    </div>
    <div class="row">
      <div class="project-groups">
        <%= simple_form_for(@project) do |f| %>
          <div class="form-inlign"><%= f.input :name, label: false, placeholder: "New project" %></div>
          <div class="form-inlign"><%= f.button :submit, "+", class: "btn btn-primary" %></div>
        <% end %>
      </div>
    </div>
  </div>

  <% @projects.each do |project| %>
    <div class="col-xs-12 col-sm-6">
      <div class="project-card">
        <div class="row">
          <div class="card-project-element">
            <div class="card-project-photo">
              <%=link_to project_path(project) do %>
                <%= image_tag "image3.jpg", class: "photo-project" %>
              <% end %>
            </div>
            <div class="card-project-name">
              <%=link_to project_path(project) do %>
                <h3><%= project.name %></h3>
              <% end %>
              <p><em>Last update: <%= project.date %></em></p>
              <div class="collaborator-block">
                <p>Shared with</p>
                <% project.users.each do |user| %>
                  <%= image_tag user.picture, class: "avatar-extra-small avatar-margin-left" %>
                <% end %>
              </div>
              <p><%= link_to "Edit", edit_project_path(project), class: "btn btn-primary" %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
