<div class="container">
  <h1>Projects</h1>

  <div class="project-nav">
    <div class="row">
      <div class="project-groups">
        <ul>
          <li>Recent | </li>
          <li>Favorites | </li>
          <li>All</li>
        </ul>
      </div>
    </div>
    <div class="row">
      <p>New project</p>
    </div>
  </div>

  <% @projects.each do |project| %>
    <div class="col-xs-12 col-sm-6">
      <div class="project-card">
        <div class="row">
          <div class="card-project-element">
            <div class="card-project-photo">
              <p>PHOTO/link</p>
            </div>
            <div class="card-project-name">
              <h3><%= project.name %></h3>
              <p>Shared with ***Project USERS***</p>
              <p><%= link_to "Edit", edit_project_path(project) %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

