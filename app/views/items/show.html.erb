<%= render 'shared/search' %>
<div class="col-xs-12">
  <h5><%= @item.name %></h5>
</div>
<div class="container-show">
  <div class="row">
    <% if @item.photo.blank? %>
      <% photo = "https://images.unsplash.com/photo-1505394033641-40c6ad1178d7?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=2ce08c47852fb7cceac5e1e0fa88f404&auto=format&fit=crop&w=1012&q=80"%>
    <% else %>
      <% photo = cl_image_path @item.photo, width: 1210, height: 600, crop: :fill %>
    <% end %>
    <div class="col-xs-12 col-sm-6">
      <div class="photoshow" style="background-image: linear-gradient(rgba(150,150,150,0.2), rgba(150,150,150,0.2)), url('<%= photo %>')">
      </div>
    </div>
    <div class="col-xs-12 col-sm-6">
      <div class="show-content">
        <div class="title">
          <h1>All</h1><h1>your</h1><h1>tags</h1><h1>here:</h1>
        </div>
        <div class="row">
          <div class="form">
            <%= render 'form' %>
          </div>
          <div class="tags">
            <div class="tag-index">
              <% @item.tag_list.each do |tag| %>
                <div class="card-tag-index"><%= tag %></div>
                  <div class="bellepou">
                  <%= link_to item_tag_path(@item, Tag.find_by_name(tag)), method: :delete, remote: true do %>
                    <%= image_tag "trash-simple.svg"%>
                  <% end %>
                  </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-xs-12">
    <a href="<% @item.url %>">Go to original website</a>
  </div>
  <div class="col-xs-12 col-sm-6">
    <div class="show-project">
      <div class="title">
        <h4>Add a project:</h4>
      </div>
        <div class="row">
        <div>
          <%= simple_form_for([@item, @project_item], remote: true) do |f| %>
              <p class="project-list"><%= f.input :project_id, policy_scope:"add a project", collection: current_user.projects %></p>
              <p class="project-button"><%= f.button :submit, "Add", class: "btn btn-primary" %></p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
    <div class="col-xs-12 col-sm-6">
    <div class="show-project">
      <div class="title">
        <h4>Item already assigned to the following projects:</h4>
      </div>
        <div class="row">
        <div>
        <div class="tags-projects">
          <% @item.project_items.each do |project_item| %>
            <div class="tag-projects">
            <button><%= project_item.project.name %>
              <div class="bellepou">
              <%= link_to item_project_item_path(@item, project_item), remote: true, method: :delete do %>
                <%= image_tag "trash-simple.svg"%>
              <% end %>
              </div>
            </button>
            </div>
          <% end %>
        </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-xs-12">
    <div class="scd-row">
      <%= button_to "Back", items_path, :class => "btn btn-danger", :method => :get %>
      <%= link_to item_path(@item), method: :delete do %>
        <%= image_tag "trash-simple.svg"%>
      <% end %>
    </div>
  </div>
</div>
